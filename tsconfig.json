{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "lib": [
      "dom",
      "esnext"
    ],
    "jsx": "preserve",
    "jsxFactory": "h",
    "importHelpers": true,
    "strict": false,
    "strictBindCallApply": false,
    "strictFunctionTypes": false,
    "stripInternal": false,
    "moduleResolution": "node",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "allowUnusedLabels": true,
    "noImplicitReturns": false,
    "suppressImplicitAnyIndexErrors": false,
    "baseUrl": "./",
    "outDir": "./dist",
    "rootDir": "./",
    "strictPropertyInitialization": false,
    "noImplicitThis": false,
    "strictNullChecks": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "noFallthroughCasesInSwitch": true,
    "noEmitOnError": true,
    "noErrorTruncation": true,
    "noImplicitUseStrict": true,
    "emitBOM": false,
    "paths": {
      "ims-decorator": [
        "packages/ims-decorator/lib/index.ts"
      ],
      "nger-core": [
        "packages/nger-core/lib/index.ts"
      ],
      "nger-module-pm2": [
        "packages/nger-module-pm2/lib/index.ts"
      ],
      "nger-module-gulp": [
        "packages/nger-module-gulp/lib/index.ts"
      ],
      "nger-module-webpack": [
        "packages/nger-module-webpack/lib/index.ts"
      ],
      "nger-module-typeorm": [
        "packages/nger-module-typeorm/lib/index.ts"
      ],
      "nger-di": [
        "packages/nger-di/lib/index.ts"
      ],
      "nger-logger": [
        "packages/nger-logger/lib/index.ts"
      ],
      "nger-compiler": [
        "packages/nger-compiler/lib/index.ts"
      ],
      "nger-components": [
        "packages/nger-components/lib/index.ts"
      ],
      "nger-platform-cli": [
        "packages/nger-platform-cli/lib/index.ts"
      ],
      "nger-platform-test": [
        "packages/nger-platform-test/lib/index.ts"
      ],
      "nger-platform-express": [
        "packages/nger-platform-express/lib/index.ts"
      ],
      "nger-platform-axios": [
        "packages/nger-platform-axios/lib/index.ts"
      ],
      "nger-platform-weapp": [
        "packages/nger-platform-weapp/lib/index.ts"
      ],
      "nger-platform-koa": [
        "packages/nger-platform-koa/lib/index.ts"
      ],
      "nger-compiler-style": [
        "packages/nger-compiler-style/lib/index.ts"
      ],
      "nger-util": [
        "packages/nger-util/lib/index.ts"
      ]
    },
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "node",
      "mocha"
    ],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "packages",
    "src",
    "typings/*.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}